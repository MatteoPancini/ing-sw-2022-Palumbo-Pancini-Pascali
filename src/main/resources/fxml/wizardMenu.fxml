         <effect>
            <ColorAdjust saturation="-0.04" />
         </effect>
      </Button>
      <Button fx:id="witchButton" layoutX="501.0" layoutY="300.0" mnemonicParsing="false" onMouseClicked="#chooseWitch" text="WITCH" textFill="#ac6868">
