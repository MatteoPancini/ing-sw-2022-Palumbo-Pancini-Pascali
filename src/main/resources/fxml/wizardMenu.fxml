         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fx:id="king1" fitHeight="163.0" fitWidth="108.0" layoutX="175.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true" styleClass="wizard">
